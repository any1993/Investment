<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/recycler_divider</item>
    </style>

    <!--底部标签RadioButton样式-->
    <style name="TabRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/btn_tab</item>
    </style>
    
    <!--工具栏RadioButton样式-->
    <style name="UtilsRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333</item>
    </style>


    <!--PopupWindow 动画-->
    <style name="pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@animator/slide_in</item>
        <item name="android:windowExitAnimation">@animator/slide_out</item>
    </style>

    <!--下拉刷新，加载更多的 list -->
    <style name="refresh_list_style">
        <item name="android:divider">@color/divider_color</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
    </style>

    <!--基金产品库Radio Button -->
    <style name="tab_choose">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:drawableEnd">@drawable/selector_btn_pop</item>
        <item name="android:textColor">@color/btn_red_gray6</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:drawablePadding">-15dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@null</item>
    </style>

    <!--产品库-->
    <style name="column_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666</item>
    </style>

    <!--产品list-->
    <style name="list_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>


    <style name="progress_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/bg_progress</item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="product_radio_button_cb">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/selector_btn_date_cb</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn_red_gray3</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--产品库，筛选条件的CheckBox-->
    <style name="product_check_box">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:drawableStart">@drawable/selector_cb_agree</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@null</item>
    </style>

    <!--产品库，筛选条件的RadioButton-->
    <style name="product_radio_button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/selector_btn_date</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn_red_gray3</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
