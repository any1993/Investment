<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#FFF"
    android:paddingEnd="10dp"
    android:paddingStart="15dp">
<!--资讯，通用-->
    <TextView
        android:id="@id/tv_general_title"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:text="@string/app_name"
        android:textColor="#333"
        android:textSize="16sp" />

    <TextView
        android:id="@id/tv_general_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_general_title"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="16dp"
        android:text="@string/app_name"
        android:textColor="#999"
        android:textSize="11sp" />

    <TextView
        android:id="@id/tv_general_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_general_title"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/tv_general_date"
        android:background="@drawable/bg_text_gray"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#666"
        android:textSize="12sp" />

    <TextView
        android:id="@id/tv_general_tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_general_title"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/tv_general_tag1"
        android:background="@drawable/bg_text_gray"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#666"
        android:textSize="12sp" />

    <ImageView
        android:id="@id/iv_general_image"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_image" />
</RelativeLayout>
