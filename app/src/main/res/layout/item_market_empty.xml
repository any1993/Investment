<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content">
    <!--市场观点，大V看空-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/iv_empty_photo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:src="@drawable/default_head" />

    <TextView
        android:id="@id/tv_empty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@id/iv_empty_photo"
        android:text="name"
        android:textColor="#666"
        android:textSize="11sp" />

    <TextView
        android:id="@id/tv_empty_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@id/tv_empty_name"
        android:text="date"
        android:textColor="#666"
        android:textSize="11sp" />

    <TextView
        android:id="@id/tv_empty_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/iv_empty_photo"
        android:layout_marginEnd="10dp"
        android:gravity="center|end"
        android:maxLines="2"
        android:paddingBottom="5dp"
        android:text="title"
        android:textColor="#333"
        android:textSize="12sp" />

</RelativeLayout>