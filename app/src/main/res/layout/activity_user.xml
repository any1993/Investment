<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--用户-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:background="@drawable/bg_gradient">

        <ImageButton
            android:id="@id/ib_user_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/backup" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/iv_user_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/user_photo" />

        <TextView
            android:id="@id/tv_user_identify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="60dp"
            android:text="游客"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@id/tv_user_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="60dp"
            android:text="02397"
            android:textColor="#fff"
            android:textSize="16sp" />
    </FrameLayout>
    <!--手机绑定-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/bind_phone"
            android:gravity="center_vertical"
            android:text="手机绑定"
            android:textColor="#000"
            android:textSize="17sp" />

        <Button
            android:id="@id/bt_bind_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/arrow_right"
            android:text="111111111" />
    </LinearLayout>

    <include layout="@layout/include_line" />

    <!--意见反馈-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/feedback"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textColor="#000"
            android:textSize="17sp" />

        <ImageButton
            android:id="@id/ib_feedback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <include layout="@layout/include_line" />

    <!--关于我们-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="#FFF"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/about_us"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:textColor="#000"
            android:textSize="17sp" />

        <ImageButton
            android:id="@id/ib_about_us"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <include layout="@layout/include_line" />

    <!--设置-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/setting"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="#000"
            android:textSize="17sp" />

        <ImageButton
            android:id="@id/ib_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <include layout="@layout/include_line" />
</LinearLayout>