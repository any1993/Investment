<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:background="@drawable/bg_gradient"
    android:orientation="horizontal">
<!--标题栏-->
    <TextView
        android:id="@id/tv_top_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:textColor="#FFF"
        android:background="@drawable/default_head"
        android:clickable="true"
        android:visibility="visible" />

    <TextView
        android:id="@id/tv_top_bar_middle"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:drawableStart="@drawable/search_grey"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="#FFF"
        android:textSize="17sp" />

    <TextView
        android:id="@id/tv_top_bar_right"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:textColor="#FFF"
        android:layout_marginTop="2dp"
        android:background="@drawable/search_white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <TextView
        android:id="@id/tv_top_bar_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:background="@drawable/add_white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:visibility="gone" />
</LinearLayout>